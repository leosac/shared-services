<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>Leosac.$(AssemblyName)</PackageId>
    <Version>1.9.0</Version>
    <Product>Leosac Shared Services Library</Product>
    <Description>C# Library for shared Leosac services.</Description>
    <Company>Leosac SAS</Company>
    <Authors>leosac</Authors>
    <AssemblyTitle>Leosac WpfApp</AssemblyTitle>
    <Copyright>Copyright © Leosac 2025</Copyright>
    <PackageProjectUrl>https://github.com/leosac/shared-services</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/leosac/shared-services.git</RepositoryUrl>
    <PackageTags>leosac dotnet shared services library</PackageTags>
    <PackageLicenseExpression>LGPL-3.0-only</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <RootNamespace>Leosac.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="DeviceId" Version="6.8.0" />
    <PackageReference Include="DeviceId.Windows" Version="6.8.0" />
    <PackageReference Include="log4net" Version="3.0.3" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

</Project>
